<main class="container">
  <%= turbo_frame_tag "creator_dashboard_turbo_frame" do %>

<div class="container">
<div class="left_panel" data-controller="start" >
    <div class="circle" id='led'></div>
    <button class="btn-impo" data-action="start#start">START</button>
    <button class="btn-impo" data-action="start#finish">STOP</button>
    <button class="btn-impo" data-action="start#continue">CONTINUE</button>
    <button class="btn-impo">|</button>
    <button class="btn-impo">>0<</button>
    <button class="btn-impo">PRINTER</button>
  </div>

  <%= form_with model: @test, url: examinations_path do |form| %>
    <div class="right-container">
    <div class="upper_panel">
        <div class="box">
            <label>Date</label>
            <%= form.text_field :created_at, class: 'inp'  %>
        </div>
        <div class="box">
            <label>Time trial, s</label>
            <%= form.text_field :total_time, class: 'inp', value: ExaminationsController::DEFAULT_TIME_TRIAL %>
        </div>
        <div class="box mt8">
          <span class="inp" ><%= "#{@brand_receipt.brand.name} ##{@brand_receipt.receipt_num}" %></span>
        </div>
      <div class="box">
        <label>Weight sample, gr</label>
          <%= form.text_field :weight_sample_gr, class: 'inp', value: ExaminationsController::DEFAULT_WEIGHT_SAMPLE %>
      </div>
        <div class="box">
          <label>Load, N</label>
          <%= form.text_field :load_n, class: 'inp' %>
        </div>
        <div class="box">
            <label>Speed, min <sup>-1</sup></label>
          <%= form.text_field :rot_speed, class: 'inp' %>
        </div>
      <div class="box">
        <label>Test number</label>
        <%= form.text_field :test_num, class: 'inp' %>
        <%= form.hidden_field :id, class: 'inp', value: @test.id %>
      </div>
      <div class="box">
      <label>SCLK</label>
        <%= form.number_field :sck, class: 'inp' , value: 0, in: 0..1000000 %>
      </div>
    </div>
    <div class="main_panel" >
      <canvas id="myChart" width="400" height="200" data-controller="chart"></canvas>
    </div>
    <div class="lower_panel">
        <table>
            <thead>
                <tr>
                    <th>Torque 1, N</th>
                    <th>Time 1, s</th>
                    <th>Torque 2, N</th>
                    <th>Time 2, s</th>
                    <th>Torque 3, N</th>
                    <th>Time 3, s</th>
                    <th>Torque 4, N</th>
                    <th>Time 4, s</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><%= form.text_field :torque1, class: 'cell ' %></td>
                    <td><%= form.text_field :time1,   class: 'cell' %></td>
                    <td><%= form.text_field :torque2, class: 'cell ' %></td>
                    <td><%= form.text_field :time2,   class: 'cell' %></td>
                    <td><%= form.text_field :torque2, class: 'cell ' %></td>
                    <td><%= form.text_field :time3,   class: 'cell' %></td>
                    <td><%= form.text_field :torque4, class: 'cell ' %></td>
                    <td><%= form.text_field :time4,   class: 'cell' %></td>
                </tr>
            </tbody>
        </table>
        <table>
            <thead>
                <tr>
                    <th>Voltage, V</th>
                    <th>Current, A</th>
                    <th>Frequency, HZ</th>
                    <th>Power, W</th>
                    <th>Energy, kWh</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><%= form.text_field :mid_voltage,   class: 'cell' %></td>
                    <td><%= form.text_field :mid_current,   class: 'cell' %></td>
                    <td><%= form.text_field :mid_frequency, class: 'cell' %></td>
                    <td><%= form.text_field :mid_power,     class: 'cell' %></td>
                    <td><%= form.text_field :total_energy,  class: 'cell' %></td>
                </tr>
            </tbody>
        </table>
    </div>
  </div>
  <% end %>
    <div class="right_panel">
    <button class="btn-impo">Previous Tests</button>
    <button class="btn-impo">Open DB</button>
    <button class="btn-impo">Settings</button>
    <button class="btn-impo">?</button>
    <button class="btn-impo">Save to DB</button>
  </div>

</div>
<% end %>

</main>