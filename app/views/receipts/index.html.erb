<main class="container">
  <%= turbo_frame_tag "creator_dashboard_turbo_frame" do %>

    <%= form_with model: @brand_reciept, url: :brand_receipts, method: :get do |form| %>
      <div class="d-flex input-form-brand">
        <div class="side full">
          <div class="row mt--10">
            <button class="btn">RECEIPT #<%= @brand_receipt.id %></button>
            <label class="label-name name">BRAND NAME:</label>
            <%= form.text_field :name, class: "input-field name" %>
            <%= form.hidden_field :id %>
            <label class="label-name use">USE:</label>
            <%= form.text_field :id, class: "input-field use" %>
            <label class="label-name desc">DESC:</label>
             <%= form.text_field :description, class: "input-field desc" %>
          </div>
        </div>
      </div>
    <% end %>
    <div class="panel-tbl-brands">
      <%
        model = @update_record || @receipt || @receipts
        url =  receipts_path
        url =  receip_path(@update_record) if @update_record
        method = :put if @update_record
      %>
      <%= form_with model: , url: , method:  do |form| %>
        <table>
          <thead>
            <tr>
              <th>SELECT</th>
              <th>No.</th>
              <th>SHORT NAME</th>
              <th>MATERIAL</th>
              <th>AMOUNT, g</th>
              <th>NOTE</th>
              <th>SUM, $</th>
              <th>VOLUME, cc</th>
              <th>UPDATED</th>
            </tr>
          </thead>
          <tbody data-controller="check-toggle">
          <% @brand_receipts.each.with_index(1) do |rec, index| %>
            <tr data-action="click->check-toggle#clickRow">
              <%
                its_readonly_row = @material || @update_record&.id != rec.id
                st = @update_record.nil? & @user_pushed_add_new.nil?
              %>
              <%=
                if its_readonly_row
                  render 'receipts/output_readonly_fields', rec:, materials: @materials, st:, index:
                else
                  render 'receipts/output_update_fields', rec: , form: , index:
                end
              %>
            </tr>
          <% end %>

          <%= render( 'receipts/add_row_new_material', form: ) if @user_pushed_add_new %>

          </tbody>
        </table>
        <%= form.submit if @user_pushed_add_new || @update_record %>
      <% end %>
    </div>
    <footer>
      <%=
        button_to "ADD NEW MATERIAL", add_new_receipts_path(id: @brand_receipt.id), class:"btn", method: :post   %><%=
        render 'materials/shows_EDIT_DELETE_MATERIALS_buttons' unless @receipts.empty?
      %>
      <div class="form-check-toggle-controller">
        <%= button_to "DASHBOARD", :creator_dashboards, class:"btn", method: :get %>
      </div>
    </footer>
  <% end %>
</main>