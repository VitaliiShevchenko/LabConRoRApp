            <td class="cell"><%= form.text_field @brand.intended_use %></td>
            <td class="cell"><%= form.text_field @brand.desc %></td>
            <td class="cell"><%= form.text_field @brand.calculated_cost %></td>
            <td class="cell">*</td>
            <td class="cell">*</td>
            <% end %>
          </tr>
          <% end %>
